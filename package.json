{
	"name": "wysiwyg",
	"version": "1.0.3",
	"description": "",
	"main": "index.js",
	"scripts": {
		"serve": "http-server -a localhost -p 8061",
		"build": "webpack --config ./code-editor--webpack.config.js && webpack --config ./wysiwyg--webpack.config.js && cp -r ./node_modules/tinymce/skins ./dist/skins",
		"fix": "eslint --fix .",
		"release": "npm run patch-release",
		"patch-release": "npm run build && va-release --version patch",
		"minor-release": "npm run build && va-release --version minor",
		"major-release": "npm run build && va-release --version major",
		"build-templates": "va-release -t",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"va-release": {
		"assets": "dist/**/*",
		"files": [
			{
				"cwd": "templates/",
				"src": [
					"**/*"
				],
				"dest": "./"
			}
		]
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.2",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-async-to-generator": "^6.24.1",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.6.1",
		"eslint": "^4.18.0",
		"eslint-plugin-babel": "^4.1.2",
		"eslint-plugin-import": "^2.8.0",
		"exports-loader": "^0.7.0",
		"http-server": "^0.11.1",
		"imports-loader": "^0.7.1",
		"regenerator-runtime": "^0.11.1",
		"va-release": "^1.0.21",
		"webpack": "^3.11.0"
	},
	"dependencies": {
		"brace": "^0.11.1",
		"js-beautify": "^1.7.5",
		"tinymce": "^4.7.7",
		"tinymce-i18n": "^18.2.15"
	}
}
