{
	"name": "remote-wysiwyg",
	"version": "1.0.85",
	"description": "",
	"main": "index.js",
	"_moduleAliases": {
		"root": "./src/js"
	},
	"scripts": {
		"init": "rm -rf ./node-modules/ > /dev/null && npm ci",
		"fix": "eslint --fix ./src/app/",
		"start": "node ./build-utils/run-esm.js -s ./src/server",
		"clean-js": "rm -rf ./dist/js/ > /dev/null",
		"clean-and-build-dev-js": "run-s clean-js build-dev-js",
		"bld": "run-s clean-js build:* copyfiles minify:*",
		"build": "run-s clean-js bump build:* copyfiles minify:*",
		"build-dev": "run-p build:templates build-and-minify:less copyfiles clean-and-build-dev-js",
		"build-dev-js": "NODE_ENV=development BABEL_ENV=development webpack --config ./webpack/development.config.js",
		"bump": "npm version patch --no-git-tag-version",
		"copyfiles": "copyfiles -f ./src/sw.js ./dist/",
		"build:js": "NODE_ENV=production BABEL_ENV=production webpack --config ./webpack/production.config.js",
		"build:less": "lessc ./src/less/wysiwyg.less ./dist/css/wysiwyg.css && lessc ./src/less/code-editor.less ./dist/css/code-editor.css && lessc ./src/less/wisywig-content.less ./dist/css/wisywig-content.css  && postcss ./dist/css/*.css -r -u autoprefixer",
		"minify:less": "foreach -g './dist/css/*.css' -i './dist/css/*.min.css' -x 'cleancss -o #{dir}/#{name}.min#{ext} #{path}'",
		"build:templates": "node ./build-utils/run-esm.js -s ./build-utils/build-templates.js",
		"build-and-minify:less": "run-s build:less minify:less",
		"pack": "node ./build-utils/run-esm.js -s ./build-utils/create-package.js",
		"dev:js": "node ./build-utils/run-esm.js -s ./build-utils/dev-server.js",
		"dev:less": "watch -p './src/less/**/*.less' -c 'npm run build-and-minify:less'",
		"dev:templates": "watch -p './src/templates/*' -c 'npm run build:templates'",
		"dev": "run-p build:templates build-and-minify:less copyfiles dev:templates dev:less \"dev:js -- {@}\" --",
		"release-commit": "node ./build-utils/run-esm.js -s ./build-utils/commit.js",
		"release": "npm run plain-release",
		"analyse-build": "NODE_ENV=production BABEL_ENV=production webpack --config ./webpack/production.config.js --profile",
		"analyse-build-2": "webpack-bundle-analyzer ./webpack/analyse.json ./dist/js/",
		"plain-release": "npm run build && va-release -g",
		"patch-release": "npm run build && va-release --version patch -g",
		"minor-release": "npm run build && va-release --version minor -g",
		"major-release": "npm run build && va-release --version major -g"
	},
	"dependencies": {
		"brace": "^0.11.1",
		"markdown-it": "^8.4.1",
		"pretty": "^2.0.0",
		"sanitize-html": "^1.18.2",
		"tinymce": "^4.7.7",
		"tinymce-i18n": "^18.2.15",
		"turndown": "^4.0.1",
		"turndown-plugin-gfm": "^1.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.1.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.0.0",
		"@babel/plugin-proposal-optional-chaining": "^7.0.0",
		"@babel/plugin-proposal-unicode-property-regex": "^7.0.0",
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"@babel/plugin-syntax-import-meta": "^7.0.0",
		"@babel/plugin-transform-regenerator": "^7.0.0",
		"@babel/polyfill": "^7.0.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/register": "^7.0.0",
		"autoprefixer": "^9.1.5",
		"babel-eslint": "^9.0.0",
		"babel-loader": "^8.0.2",
		"babel-minify": "^0.4.3",
		"bestzip": "^2.1.1",
		"browser-sync": "^2.24.7",
		"clean-css-cli": "^4.2.1",
		"copyfiles": "^2.1.0",
		"cross-env": "^4.0.0",
		"deepmerge": "^2.2.1",
		"eslint": "^5.6.0",
		"esm": "^3.0.84",
		"expose-loader": "^0.7.5",
		"express": "^4.16.3",
		"find-free-port": "^2.0.0",
		"foreach-cli": "^1.8.0",
		"fs-extra": "^7.0.0",
		"globby": "^8.0.1",
		"html-escape": "^2.0.0",
		"html-loader": "^0.4.5",
		"http-proxy-middleware": "^0.19.0",
		"imports-loader": "^0.7.1",
		"inject-loader": "^3.0.0",
		"is-glob": "^4.0.0",
		"is-wsl": "^1.1.0",
		"less": "^3.8.1",
		"module-alias": "^2.1.0",
		"morgan": "^1.9.1",
		"mustache": "^3.0.0",
		"ngrok": "^3.1.0",
		"npm-run-all": "^4.1.3",
		"open": "0.0.5",
		"postcss-cli": "^6.0.0",
		"raw-loader": "^0.5.1",
		"regenerator-runtime": "^0.12.1",
		"semver": "^5.5.1",
		"serve-index": "^1.9.1",
		"serve-static": "^1.13.2",
		"shelljs": "^0.7.8",
		"uglifycss": "0.0.29",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"universal-url": "^1.0.1",
		"va-release": "^1.1.14",
		"watch-cli": "^0.2.3",
		"webpack": "4.20.2",
		"webpack-bundle-analyzer": "^3.0.3",
		"webpack-cli": "3.1.1",
		"webpack-dev-middleware": "3.4.0",
		"webpack-dev-server": "3.1.8",
		"webpack-hot-middleware": "2.24.2",
		"webpack-merge": "4.1.4",
		"yargs": "^12.0.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forceuser/remote-wysiwyg.git"
	},
	"va-release": {
		"files": [
			{
				"cwd": "./src/",
				"src": [
					"README.md"
				],
				"dest": "./"
			}
		],
		"library": "remoteWysiwyg"
	},
	"author": "",
	"license": "ISC"
}
