{
	"name": "remote-wysiwyg",
	"version": "1.1.0",
	"description": "",
	"main": "./dist/js/wysiwyg.js",
	"module": "./dist/js/wysiwyg.esm.js",
	"exports": {
		".": {
			"import": "./dist/js/wysiwyg.esm.js",
			"require": "./dist/js/wysiwyg.js"
		},
		"./css/*": "./dist/css/*"
	},
	"scripts": {
		"init": "rm -rf ./node_modules/ > /dev/null && npm ci",
		"clean": "rm -rf ./dist/ > /dev/null",
		"dev": "npm run build:vite:once && run-p dev:watch dev:serve",
		"dev:watch": "vite build --config vite.config.js --watch",
		"dev:serve": "vite preview --host 0.0.0.0 --open /wysiwyg.html",
		"dev:css": "vite build --config vite.config.css.js --watch",
		"build": "run-s clean build:vite build:minify",
		"build:vite": "vite build --config vite.config.css.js && vite build --config vite.config.js && vite build --config vite.config.js --mode wysiwyg && vite build --config vite.config.js --mode code-editor",
		"build:vite:once": "vite build --config vite.config.css.js && vite build --config vite.config.js",
		"build:minify": "foreach -g './dist/css/*.css' -i './dist/css/*.min.css' -x 'cleancss -o #{dir}/#{name}.min#{ext} #{path}'",
		"bump": "npm version patch --no-git-tag-version",
		"pack": "node ./build-utils/run-esm.js -s ./build-utils/create-package.js",
		"release-commit": "node ./build-utils/run-esm.js -s ./build-utils/commit.js",
		"release": "npm run plain-release",
		"plain-release": "npm run build && va-release -g",
		"patch-release": "npm run build && va-release --version patch -g",
		"minor-release": "npm run build && va-release --version minor -g",
		"major-release": "npm run build && va-release --version major -g"
	},
	"dependencies": {
		"@gerhobbelt/markdown-it-checkbox": "^1.2.0-3",
		"@truto/turndown-plugin-gfm": "^1.0.2",
		"brace": "^0.11.1",
		"markdown-it": "^13.0.2",
		"markdown-it-github-alerts": "^1.0.1",
		"pretty": "^2.0.0",
		"sanitize-html": "^1.18.2",
		"tinymce": "^4.7.7",
		"tinymce-i18n": "^18.2.15",
		"turndown": "^7.2.2",
		"turndown-plugin-gfm": "^1.0.1"
	},
	"devDependencies": {
		"bestzip": "^2.1.1",
		"clean-css-cli": "^4.2.1",
		"esm": "^3.0.84",
		"foreach-cli": "^1.8.0",
		"fs-extra": "^7.0.0",
		"less": "^4.5.1",
		"npm-run-all": "^4.1.3",
		"terser": "^5.46.0",
		"va-release": "^1.1.14",
		"vite": "^6.4.1",
		"vite-plugin-static-copy": "^2.3.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forceuser/remote-wysiwyg.git"
	},
	"va-release": {
		"files": [
			{
				"cwd": "./src/",
				"src": [
					"README.md"
				],
				"dest": "./"
			}
		],
		"library": "remoteWysiwyg"
	},
	"author": "",
	"license": "ISC"
}
